<!DOCTYPE html>
<html>
<head>
    <title>Color Pages Yellow</title>
    <!-- Wix JS SDK -->
    <script type="text/javascript" src="https://dl.dropboxusercontent.com/u/262669197/Wix.js"></script>
<script>
function changeBackground(color) 
{

   document.body.style.background = color;
}
function getSelectedColor()
{
	var myselect = document.getElementById('colors');
	return myselect.options[myselect.selectedIndex].value;
}

</script>
</head>


<body>
       <h3>Please choose a color to change this page background:</h3>
<form action="">
<select name="colors" id="colors">
<option value="Red">Red</option>
<option value="Blue">Blue</option>
<option value="Green">Green</option>
<option value="Yellow">Yellow</option>
</select>
<br>
<input type="button" value="Change Color" onclick="changeBackground(getSelectedColor());">
</form>


</body>
</html>
